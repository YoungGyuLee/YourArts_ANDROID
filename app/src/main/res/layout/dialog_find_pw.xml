<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/id_box"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:text="새 비밀번호를 입력하세요."
        android:textSize="14sp"
        android:background="@drawable/pw_box"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="26dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW"
            android:layout_marginRight="45dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_find_correct"
            android:layout_gravity="center"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textColor="#666666"
            android:hint="비밀번호"
            android:textColorHint="#666666"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:lines = "1"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#95989A"
        android:layout_marginBottom="22dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="26dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW"
            android:layout_marginRight="45dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_find_pwcorrect"
            android:layout_gravity="center"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textColor="#666666"
            android:hint="비밀번호확인"
            android:textColorHint="#666666"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:lines = "1"
            />

        <TextView
            android:gravity="center_vertical|right"
            android:layout_marginRight="0dp"
            android:id="@+id/pwfindcorrect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="correcct!" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#95989A"/>

    <ImageButton
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btn_id_ok"
        android:background="@drawable/confirm_button" />

</LinearLayout>
