<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_twobutton_gray"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/dialog_gallery_txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:lineSpacingMultiplier="1"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="AAAAAAA\n AAAAAAAAAAA"
            android:textStyle="bold"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_gallery_btn_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="bottom"
                android:text="NO" />

            <Button
                android:id="@+id/dialog_gallery_btn_yes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:textColor="#00ffc4"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="bottom"
                android:text="YES" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>