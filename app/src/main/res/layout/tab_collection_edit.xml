<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:id="@+id/collection_edit_container"
    >
    <LinearLayout
        android:id="@+id/collection_edit_container_frame"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/collection_edit_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@drawable/ic_camera"
            />
        <TextView
            android:id="@+id/collection_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:text="콜렉션"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/collection_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:text="저장"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/collection_edit_imgframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/collection_edit_img"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="21dp"
        />
        <TextView
            android:id="@+id/collection_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="사진을 넣어주세요"
            android:textColor="#000000"
            android:textSize="13sp"
            android:includeFontPadding="false"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="17dp"
        >

        <EditText
            android:id="@+id/collection_edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/collection_edit_icon"
            />
        <TextView
            android:id="@+id/collection_edit_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="13sp"
            android:textColor="#000000"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/collection_edit_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            />
        

    </RelativeLayout>
    <View
        android:id="@+id/collection_edit_line"
        android:layout_below="@+id/collection_edit_icon"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:background="#000000"
        />

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/collection_edit_search_result"
        android:layout_below="@+id/collection_edit_line"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/collection_detail_container2"
            android:background="@drawable/collection_content_frame"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            >


            <EditText
                android:id="@+id/collection_edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:textSize="13sp"
                android:hint="작품에 대한 당신의 생각을 자유롭게 펼쳐주세요!"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="6dp"
                android:textColor="#666666"
                android:textColorHint="#666666"
                />


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>