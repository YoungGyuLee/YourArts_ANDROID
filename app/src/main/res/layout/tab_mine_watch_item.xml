<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="318dp"
        android:layout_height="102dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <View
                android:id="@+id/watchViewFirst"
                android:layout_width="65dp"
                android:layout_height="102dp" />
            <View
                android:id="@+id/watchViewSecond"
                android:layout_width="58dp"
                android:layout_height="102dp" />
            <View
                android:id="@+id/watchViewThird"
                android:layout_width="65dp"
                android:layout_height="102dp" />
            <View
                android:id="@+id/watchViewFourth"
                android:layout_width="65dp"
                android:layout_height="102dp" />
            <View
                android:id="@+id/watchViewFifth"
                android:layout_width="65dp"
                android:layout_height="102dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgWatchItemPicture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="108dp"
            >
            <TextView
                android:id="@+id/txtWatchItemDate"
                android:layout_width="102dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:background="#000000"
                android:text="언제 - 언제"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                >
            </TextView>
            <TextView
                android:id="@+id/txtWatchItemName"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="9dp"
                android:textSize="17sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp">

    </View>
</LinearLayout>